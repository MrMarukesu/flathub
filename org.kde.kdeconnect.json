{
    "id": "org.kde.kdeconnect",
    "branch": "stable",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.11",
    "sdk": "org.kde.Sdk",
    "command": "kdeconnect-indicator",
    "rename-icon": "kdeconnect",
    "finish-args": [
        "--share=ipc", "--socket=x11",
        "--socket=wayland",
        "--share=network",
        "--device=dri",
        "--own-name=org.kde.kdeconnectd",
        "--own-name=org.kde.kdeconnect-indicator",
        "--talk-name=org.mpris.MediaPlayer2",
        "--talk-name=org.mpris.MediaPlayer2.Player"
    ],
    "rename-desktop-file": "org.kde.kdeconnect.nonplasma.desktop",
    "cleanup": [
        "/include",
		"/lib/pkgconfig",
		"/lib/*.la",
		"/lib/cmake",
		"/share/doc",
		"/share/man"
    ],
    "modules": [
        {
            "name": "libfakekey",
            "buildsystem": "simple",
            "build-commands": [
                "./configure --prefix=/app --sysconfdir=/etc --localstatedir=/var --disable-static",
                "make AM_LDFLAGS=-lX11",
                "make install"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "http://downloads.yoctoproject.org/releases/matchbox/libfakekey/0.1/libfakekey-0.1.tar.bz2",
                    "sha256": "c41042a70524895b0edf8077ae3ae1206f1a313bea5811dcc23033ea16a00194"
                }
            ]
        },
        {
            "name": "qca",
            "config-opts": ["-DENABLE_TESTING=OFF"],
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "git",
                    "url": "git://anongit.kde.org/qca.git",
                    "branch": "v2.1.3",
                    "commit": "8c08b64c8e6094fc8cd2a240dd6f8ee58cdb724e"
                }
            ]
        },
        {
            "name": "kdeconnect",
            "config-opts": ["-DCMAKE_BUILD_TYPE=Release"],
            "buildsystem": "cmake-ninja",
            "post-install": [
                "sh icons.sh"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/kdeconnect/1.3.1/src/kdeconnect-kde-1.3.1.tar.xz",
                    "sha256": "848c9cc13988b3adca79508d37f41fb46254692c6ab496820d0852d1885df267"
                },
                {
                    "type": "file",
                    "path": "icons.sh"
                },
                {
                    "type": "patch",
                    "path": "icon-fix.patch"
                }
            ]
        }
    ]
}
